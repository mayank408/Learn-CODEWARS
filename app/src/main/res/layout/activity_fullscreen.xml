<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"

    tools:context="com.example.the_dagger.learnit.activity.FullscreenActivity">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="8dp"
            android:textColor="@color/md_white_1000"
            android:text="Your Score"
            android:textStyle="bold"
            android:textSize="36sp"/>

        <TextView
            android:textColor="@color/md_white_1000"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:id="@+id/score"
            android:gravity="center"
            android:text="Your got 5 out of 10 answers orrect"
            android:textSize="20dp"/>

        <TextView
            android:textColor="@color/md_white_1000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:id="@+id/amountWon"
            android:gravity="center"
            android:text="Your wallet balance is 150 Rupees"
            android:textSize="20dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:onClick="transferMoney"
            android:text="Request Money"/>
    </LinearLayout>
    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

</FrameLayout>
